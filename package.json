  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sevesalm/Bugfree"
  },
  "scripts": {
    "start": "node server/server.js",
    "test": "mocha",
    "lint": "eslint server/.",
    "sass": "sass assets/scss/main.scss:static/style.css",
    "sass-watch": "sass --watch assets/scss/main.scss:static/style.css",
