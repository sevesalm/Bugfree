    "express-session": "^1.15.5",
    "knex": "^0.13.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^7.1.0",
    "pug": "^2.0.0-rc.3",
    "redis": "^2.8.0",
    "truncate-html": "^0.1.4"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.1",
