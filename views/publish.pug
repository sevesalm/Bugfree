extends base
block head
    script(src='https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.5.6/tinymce.min.js')
block content
    h1.text-center New post
    form.form-horizontal(method='post')
        .form-group
            label.col-sm-2.control-label(for='editorTitle') Title
            .col-sm-10
                input.form-control#editorTitle(type='text' name='title')
        .form-group
            label.col-sm-2.control-label(for='editorContent') Content
            .editorContent.col-sm-10
                #editor
        .form-group
            .col-sm-12
                button.btn.btn-primary.pull-right(type='submit') Submit

block scripts
    script.
        tinymce.init({
            selector:       '#editor',
            body_class:     'editor',
            content_css:    '/static/style.css,https://fonts.googleapis.com/css?family=Cabin',
            plugins:        'paste',
            paste_as_text:  true,
            menubar:        false,
            width:          '100%',
            height:         '400',
            plugins:        'preview codesample',
            toolbar:        'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | codesample'
        });
