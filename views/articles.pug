extends base
block head
    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/prism/1.6.0/themes/prism.min.css')
block content
    .row.articles
        h1.text-center Articles
        each article in articles
            a.articles__item(href='/articles/' + article.id)
                h3.title= article.title
                div.details By #[div.author #{article.first_name} #{article.last_name}] on #[div.time #{article.timestamp}]
                    .tags
                        each tag in article.tags
                            .tag #{tag}
                .article__content
                    != article.content

            .border
    script(src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.6.0/prism.min.js')
